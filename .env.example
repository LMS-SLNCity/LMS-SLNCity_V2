# LMS SLNCity Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# API URL (Backend URL)
# Development: http://localhost:5002
# Production: https://api.your-domain.com or https://your-domain.com/api
VITE_API_URL=http://localhost:5002

# Optional: Gemini API Key (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# BACKEND CONFIGURATION (server/.env)
# ============================================

# Environment (development, staging, production)
NODE_ENV=production
ENV=production

# Server Port
PORT=5002

# Database Configuration
# For AWS RDS: your-db-instance.region.rds.amazonaws.com
# For local: localhost
DB_HOST=localhost
DB_PORT=5432
DB_USER=lms_user
DB_PASSWORD=your-secure-database-password-change-this
DB_NAME=lms_slncity

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-very-secure-jwt-secret-key-minimum-32-characters

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production: https://your-domain.com
FRONTEND_URL=http://localhost:3000

# ============================================
# DOCKER COMPOSE CONFIGURATION
# ============================================

# Environment for database setup
# development = loads test data
# production = loads only essential data
ENV=development

# JWT Secret for containers
JWT_SECRET=your-secret-key-change-in-production

# Frontend URL for backend CORS
FRONTEND_URL=http://localhost:3000

# API URL for frontend (browser access)
VITE_API_URL=http://localhost:5002

# ============================================
# AWS DEPLOYMENT (Optional)
# ============================================

# AWS Region
# AWS_REGION=us-east-1

# S3 Configuration (for file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=lms-slncity-files

# RDS Database Endpoint
# DB_HOST=lms-db.xxxxx.us-east-1.rds.amazonaws.com

# ============================================
# SECURITY & MONITORING (Optional)
# ============================================

# Session Secret
# SESSION_SECRET=your-session-secret-change-this

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Logging
# LOG_LEVEL=info
# LOG_FILE_PATH=/var/log/lms/app.log

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@your-domain.com
