# Backend Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server Port (5002 recommended, 5000 conflicts with macOS Control Center)
PORT=5002

# Environment (development, staging, production)
NODE_ENV=production

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Database Host
# Local: localhost
# Docker: postgres (service name)
# AWS RDS: your-db-instance.region.rds.amazonaws.com
DB_HOST=localhost

# Database Port
# Standard: 5432
# Custom (if system PostgreSQL on 5432): 5433
DB_PORT=5432

# Database Credentials
DB_USER=lms_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_NAME=lms_slncity

# ============================================
# SECURITY
# ============================================

# JWT Secret (CRITICAL - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=CHANGE_THIS_TO_64_CHAR_RANDOM_STRING

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production: https://your-domain.com
FRONTEND_URL=https://yourdomain.com

# ============================================
# OPTIONAL FEATURES
# ============================================

# Gemini API Key (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# AWS S3 Configuration (for file storage)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=lms-slncity-files

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@your-domain.com

# Logging
# LOG_LEVEL=info
# LOG_FILE_PATH=/var/log/lms/app.log

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
